#!/bin/sh

runonce () {
    which ${1} > /dev/null 2>&1
    if [ $? -eq 0 ]; then
        pidof ${1} > /dev/null 2>&1
        if [ $? -ne 0 ]; then
            ${@}
        fi
    fi
}

runifos() {
    os=`uname -s`
    cmd=(${@})
    if [ ${1} = ${os} ]; then
        ${cmd[@]:1}
    fi
}

runifhost () {
    os=`hostname`
    cmd=(${@})
    if [ ${1} = ${os} ]; then
        ${cmd[@]:1}
    fi
}
