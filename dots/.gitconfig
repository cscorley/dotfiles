[user]
    name = Christopher Corley
    email = cscorley@ua.edu
[github]
    user = cscorley
    token = !cat ~/.githubtoken
[core]
    editor = vim
[diff]
[color]
    ui = auto
[merge]
    tool = vimdiff
[alias]
    st = status
    s = status -s
    ci = commit
    co = checkout
    di = diff
    dc = diff --cached
    do = diff origin/HEAD HEAD
    amend = commit --amend
    aa = add --all
    head = !git l -1
    h = !git head
    r = !git l -20
    ra = !git r --all
    ff = merge --ff-only
    pullff = pull --ff-only
    noff = merge --no-ff
    l = "!source ~/.githelpers && pretty_git_log"
    la = !git l --all
    div = divergence
    gn = goodness
    gnc = goodness --cached
    fa = fetch --all
    pom = push origin master
    b = branch
    ds = diff --stat=160,120
    dh1 = diff HEAD~1
    gr = log --graph --full-history --all --color --pretty=tformat:"%x1b[31m%hx09%x1b[32m%d%x1b[0m%x20%s%x20%x1b[33m(%an)%x1b[0m"
    ignore = "!source ~/.githelpers && add_ignore"
    noignore = "!source ~/.githelpers && add_no_ignore"
	switch = !legit switch \"$@\"
	branches = !legit branches
	sprout = !legit sprout \"$@\"
	unpublish = !legit unpublish \"$@\"
	harvest = !legit harvest \"$@\"
	sync = !legit sync \"$@\"
	publish = !legit publish \"$@\"
	graft = !legit graft \"$@\"
