#!/bin/sh

[ -f ~/.zshenv ] && . ~/.zshenv
[ -f ~/.zprofile ] && . ~/.zprofile

rundat () {
    which ${1} > /dev/null 2>&1
    if [ $? -eq 0 ]; then
        pidof ${1} > /dev/null 2>&1
        if [ $? -ne 0 ]; then
            ${@}
        fi
    fi
}

if [ -e ~/.fehbg ] ; then
    sh ~/.fehbg
fi

rundat start-pulseaudio-x11 &
#rundat pulseaudio --start &
rundat mpd ~/.mpd/mpd.conf
rundat mpc stop &
rundat mpdscribble --conf ~/.mpdscribble/mpdscribble.conf &
rundat dropboxd &
rundat gtk-redshift -l 33.21:-87.55 -t 5500:3700 -m vidmode &
rundat workrave &
rundat clipit &
rundat parcellite &
rundat xset m 0 0 &
rundat xset r rate 200 40 &
rundat wmname LG3D &

#rundat xmodmap ~/.Xmodmap
#rundat xrdb -merge ~/.Xresources
